<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AppOne.Mobile.ViewModels"
             x:Class="AppOne.Mobile.Views.DashboardView"
             x:DataType="viewmodels:DashboardViewModel"
             Title="{Binding Title}">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="{Binding WelcomeMessage}"
                   FontSize="Large"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />

            <Button Text="Przejdź do Skanera Biletów"
                    Command="{Binding GoToScannerCommand}"
                    HorizontalOptions="Fill" 
                    Margin="0,20,0,0"/>

            <!-- Jeśli chcesz go tutaj dodatkowo, możesz odkomentować:
            <Button Text="Wyloguj"
                    Command="{Binding LogoutCommand}"
                    HorizontalOptions="Fill"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    Margin="0,10,0,0"/>
            -->
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
