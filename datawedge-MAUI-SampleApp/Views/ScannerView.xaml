<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:datawedge_MAUI_SampleApp.ViewModels" x:DataType="viewModels:ScannerViewModel"
             x:Class="datawedge_MAUI_SampleApp.Views.ScannerView"
             Title="Skaner Biletów">
    <Grid RowDefinitions="*,Auto" Padding="10">
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
            <Label Text="Status Walidacji:"
                   FontSize="Medium"
                   HorizontalTextAlignment="Center"/>
            <Frame Padding="20" CornerRadius="10" BackgroundColor="{Binding MessageBackgroundColor}">
                <Label Text="{Binding ValidationMessage}"
                       FontSize="Large"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="Center"/>
            </Frame>
            <ActivityIndicator IsRunning="{Binding IsProcessing}" IsVisible="{Binding IsProcessing}" Color="CornflowerBlue"/>
        </StackLayout>

        <Button Grid.Row="1" Text="Wróć do Panelu" Command="{Binding GoToDashboardCommand}" Margin="0,10,0,0"/>

    </Grid>
</ContentPage>
