<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:datawedge_MAUI_SampleApp.ViewModels"
             x:DataType="viewmodels:ScannerViewModel"
             x:Class="datawedge_MAUI_SampleApp.Views.ScannerView"
             Title="Skaner Biletów"
             Shell.NavBarIsVisible="True">
    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="10" RowSpacing="10">

        <Frame Grid.Row="0" Padding="10" CornerRadius="5" BorderColor="LightGray">
            <VerticalStackLayout Spacing="5">
                <Label Text="Ostatni Skan:" FontSize="Medium" FontAttributes="Bold"/>
                <Label Text="{Binding ScannedDataInfo}" FontSize="Small" LineBreakMode="WordWrap"/>
            </VerticalStackLayout>
        </Frame>

        <Frame Grid.Row="1" Padding="15" CornerRadius="8" BackgroundColor="{Binding MessageBackgroundColor}">
            <Label Text="{Binding ValidationMessage}" 
                   TextColor="White" 
                   FontSize="Large" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"
                   FontAttributes="Bold"/>
        </Frame>

        <Frame Grid.Row="2" Padding="5" CornerRadius="5" BorderColor="LightGray">
            <VerticalStackLayout Spacing="5">
                <Label Text="Historia Skanów:" FontSize="Medium" FontAttributes="Bold"/>
                <ScrollView>
                    <CollectionView ItemsSource="{Binding ScanHistory}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Label Text="{Binding .}" FontSize="Micro" Padding="5,2"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </ScrollView>
            </VerticalStackLayout>
        </Frame>

        <VerticalStackLayout Grid.Row="3" Spacing="10" Margin="0,10,0,0">
        </VerticalStackLayout>
    </Grid>

</ContentPage>
