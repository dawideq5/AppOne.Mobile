<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AppOne.Mobile.ViewModels"
             x:Class="AppOne.Mobile.Views.ScannerView"
             x:DataType="viewmodels:ScannerViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto, *, Auto" Padding="15" RowSpacing="10" BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray950}}">

        <Border Grid.Row="1"
                StrokeThickness="2"
                Stroke="{Binding ScanStatusColor}"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}"
                Padding="20"
                Margin="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"/>
            </Border.StrokeShape>
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                <Image Source="scanner_icon.png" 
                       HeightRequest="80"
                       WidthRequest="80"
                       Aspect="AspectFit"
                       SemanticProperties.Description="Ikona skanera"/>

                <Label Text="{Binding ScanStatusMessage}"
                       FontSize="Title"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       TextColor="{Binding ScanStatusColor}"/>

                <Label Text="{Binding LastScannedCode}"
                       FontSize="Body"
                       HorizontalTextAlignment="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}"
                       LineBreakMode="WordWrap"/>
            </VerticalStackLayout>
        </Border>

        <Label Grid.Row="2"
               Text="Skieruj urzÄ…dzenie na kod kreskowy lub QR."
               HorizontalTextAlignment="Center"
               FontSize="Small"
               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
               Padding="0,10,0,0"/>
    </Grid>
</ContentPage>
