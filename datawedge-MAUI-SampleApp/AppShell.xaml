<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:datawedge_MAUI_SampleApp"
       xmlns:views="clr-namespace:datawedge_MAUI_SampleApp.Views"
       xmlns:viewmodels="clr-namespace:datawedge_MAUI_SampleApp.ViewModels"
       x:Class="datawedge_MAUI_SampleApp.AppShell"
       x:DataType="viewmodels:AppShellViewModel">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" VerticalOptions="Fill" Margin="0,0,10,0">
            <StackLayout Grid.Column="1" 
                         Orientation="Vertical" 
                         HorizontalOptions="End" 
                         VerticalOptions="Center"
                         Spacing="2"
                         IsVisible="{Binding IsLoggedIn}">

                <Button Text="Wyloguj"
                        Command="{Binding LogoutCommand}"
                        HorizontalOptions="End"
                        HeightRequest="40" 
                        Padding="10,0"/>

                <Label HorizontalOptions="End" 
                       VerticalOptions="Center"
                       FontSize="Small">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Zalogowano jako: "/>
                            <Span Text="{Binding LoggedInUserDisplayName}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>
        </Grid>
    </Shell.TitleView>

    <FlyoutItem Title="Główna" FlyoutIcon="icon_home.png">
        <ShellContent Title="Panel Główny"
                      ContentTemplate="{DataTemplate views:DashboardView}"
                      Route="DashboardView" />
        <ShellContent Title="Skaner"
                      ContentTemplate="{DataTemplate views:ScannerView}"
                      Route="ScannerView" />
    </FlyoutItem>

    <!-- 
        Definicja LoginView, jeśli ma być dostępna, ale nie w menu Flyout.
        Upewnij się, że trasa jest zarejestrowana w AppShell.xaml.cs.
        Ten ShellContent jest elementem zawartości, a nie elementem właściwości, więc jego pozycja tutaj jest poprawna.
    -->
    <ShellContent ContentTemplate="{DataTemplate views:LoginView}"
                  Route="LoginView"
                  FlyoutItemIsVisible="False" 
                  Shell.FlyoutBehavior="Disabled" />
</Shell>
