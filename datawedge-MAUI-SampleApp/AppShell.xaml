<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:AppOne.Mobile.Views"
       xmlns:viewmodels="clr-namespace:AppOne.Mobile.ViewModels"
       x:Class="AppOne.Mobile.AppShell"
       x:DataType="viewmodels:AppShellViewModel"
       FlyoutBehavior="Disabled">
    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" VerticalOptions="Fill" HorizontalOptions="Fill" BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Gray900}}">
            <Label Grid.Column="0"
                   Text="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=Title}"
                   TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Primary}}"
                   VerticalOptions="Center"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   Margin="15,0,0,0"/>

            <StackLayout Grid.Column="1" Orientation="Horizontal" HorizontalOptions="End" VerticalOptions="Center" Padding="0,0,10,0" Spacing="8">
                <Label Text="{Binding LoggedInUserDisplayName}"
                       IsVisible="{Binding IsLoggedIn}"
                       TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray200}}"
                       FontSize="Caption"
                       VerticalOptions="Center"/>
                <Button Text="Wyloguj"
                        IsVisible="{Binding IsLoggedIn}"
                        Command="{Binding LogoutCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Primary}}"
                        BorderColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Primary}}"
                        BorderWidth="1"
                        FontSize="Small"
                        Padding="10,5"
                        CornerRadius="5"
                        HeightRequest="35"
                        VerticalOptions="Center"/>
            </StackLayout>
        </Grid>
    </Shell.TitleView>

    <ShellContent Title="Logowanie"
                  Route="LoginView"
                  ContentTemplate="{DataTemplate views:LoginView}"
                  Shell.TabBarIsVisible="False" />

    <TabBar>
        <ShellContent Title="Panel Główny"
                      Icon="dashboard_icon.png"
                      Route="DashboardView"
                      ContentTemplate="{DataTemplate views:DashboardView}" />
        <ShellContent Title="Skaner"
                      Icon="scanner_icon.png"
                      Route="ScannerView"
                      ContentTemplate="{DataTemplate views:ScannerView}" />
    </TabBar>
</Shell>
